<?xml version="1.0"?>
<ruleset name="Custom">
    <description>Custom ruleset without doc comment checks.</description>

    <!-- Include the PSR2 standard -->
    <rule ref="PSR2"/>

    <!-- Exclude doc comment checks -->
    <rule ref="PSR2.Classes.ClassDeclaration">
        <exclude name="PSR2.Classes.ClassDeclaration.MissingDocComment"/>
    </rule>
</ruleset>
